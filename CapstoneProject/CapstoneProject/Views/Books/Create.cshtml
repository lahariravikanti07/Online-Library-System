@model CapstoneProject.Models.Book

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: #f5f5f5; /* Light pastel blue */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 30px;
    }

    h1 {
        color: black; /* High contrast with background */
        font-size: 2.5rem;
        font-weight: bold;
    }

    h4 {
        color: #2c3e50;
        font-size: 1.5rem;
        font-weight: bold;
    }

    label {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .form-control {
        margin-bottom: 12px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #28a745;
        border: none;
        font-size: 1.1rem;
        font-weight: bold;
        padding: 10px 20px;
    }

        .btn-primary:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #17a2b8;
        color: white;
        border: none;
        font-size: 1rem;
        font-weight: bold;
        padding: 8px 16px;
    }

        .btn-secondary:hover {
            background-color: #138496;
        }

    a {
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" placeholder="Author name" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" placeholder="e.g., Fiction, History" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishedYear" class="control-label"></label>
                <input asp-for="PublishedYear" class="form-control" placeholder="e.g., 2020" />
                <span asp-validation-for="PublishedYear" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" />
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
    </div>
</div>
